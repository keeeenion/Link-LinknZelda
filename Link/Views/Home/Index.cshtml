@{
    ViewBag.Title = "Lisa oma lemmikud";
}

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />

<!-- Status Bar -->
<div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>Kasutaja</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>Veebilehed</p>
        </div>
    </div>
</div>


<!-- Form -->
@using (Html.BeginForm()) {

    <!-- First part -->
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3>Kasutaja</h3>

                <div class="form-group">
                    <label class="control-label">Eesnimi</label>
                    @Html.TextBox("firstname", "", new { @class = "form-control", @required = "required", @maxlength = "100", @placeholder = "Eesnimi" })
                </div>

                <div class="form-group">
                    <label class="control-label">Perenimi</label>
                    @Html.TextBox("surname", "", new { @class = "form-control", @required = "required", @maxlength = "100", @placeholder = "Perenimi" })
                </div>

                <div class="form-group">
                    <label name="birthdate" class="control-label">Sünniaeg</label>
                    @Html.TextBox("birthdate", "", new { @class = "form-control", @required = "required", @maxlength = "100", @placeholder = "MM/DD/YYYY" })
                </div>

                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Edasi</button>
            </div>
        </div>
    </div>

    <!-- Second part -->
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12">
                <div class="row">
                    <h3 style="float:left;">Veebilehed</h3>
                    <div style="float: right;">
                        <span id="web-add" class="btn glyphicon glyphicon-plus"></span>
                        <span id="web-subtract" class="btn glyphicon glyphicon-minus disabled"></span>
                    </div>
                </div>

                <section id="sections">
                    <fieldset class="webform" id="webform-1">
                        <legend>Leht</legend>
                        <div class="form-group">

                            <!--top row-->
                            <div class="row">
                                <div class="col-xs-3">
                                    <label class="control-label">Pealkiri</label>
                                    @Html.TextBox("wf-title1", "", new { @id = "wf-title1", @class = "form-control", @required = "required", @maxlength = "20", @placeholder = "Pealkiri" })
                                </div>
                                <div class="col-xs-6">
                                    <label class="control-label">URL</label>
                                    @Html.TextBox("wf-url1", "", new { @id = "wf-url1", @class = "form-control", @required = "required", @maxlength = "200", @placeholder = "URL" })
                                </div>
                                <div class="col-xs-3">
                                    <label class="control-label">Omanik</label>
                                    @Html.TextBox("wf-owner1", "", new { @id = "wf-owner1", @class = "form-control", @required = "required", @maxlength = "200", @placeholder = "Omanik" })
                                </div>
                            </div>

                            <!--bottom row-->
                            <div class="row">
                                <div class="col-xs-5">
                                    <label class="control-label">Kirjeldus</label>
                                    @Html.TextBox("wf-desc1", "", new { @id = "wf-desc1", @class = "form-control", @required = "required", @maxlength = "30", @placeholder = "Kirjeldus" })
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="control-label">Kategooria</label>
                                        <select id="wf-cat-1" name="wf-cat-1" class="form-control">
                                            <option>Sotsiaalmeedia</option>
                                            <option>Uudised</option>
                                            <option>Sport</option>
                                            <option>Mängud</option>
                                            <option>Televisioon</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <label class="control-label">Skoor</label>
                                    <input type="range" data-popup-enabled="true" name="points" id="points" value="5" min="1" max="10">
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </section>

                <button class="btn btn-default prevBtn btn-lg pull-left" type="button">Tagasi</button>
                <button class="btn btn-success btn-lg pull-right" type="submit">Valmis</button>

            </div>
        </div>
    </div>
}